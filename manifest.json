{
  "manifest_version": 2,

  "name": "Anime episode tracker",
  "description": "Track latest episodes of anime you are watching",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "storage", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  }
}
